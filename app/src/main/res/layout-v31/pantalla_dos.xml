<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    tools:context=".ScreenTwo">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="106dp"
            android:layout_height="50dp"
            android:src="@drawable/logo_soges_png"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            />

        <LinearLayout
            android:layout_width="225dp"
            android:layout_height="45dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:layout_centerVertical="true"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="45dp"
                android:layout_height="45dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/oval_white" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/members" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="45dp"
                android:layout_height="45dp">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/oval_white"
                    />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/download" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="45dp"
                android:layout_height="45dp">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/oval_white"
                    />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/upload" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="45dp"
                android:layout_height="45dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/oval_white" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/setting" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="45dp"
                android:layout_height="45dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/oval_white" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/menu" />
            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="-20dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="20dp"
                app:cardCornerRadius="10dp"
                android:backgroundTint="#F2F2F2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:backgroundTint="@color/colorPrimary"
                        android:layout_weight="1"
                        app:cardCornerRadius="10dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textSize="16sp"
                            android:textColor="@color/white"
                            android:text="@string/Resumen"/>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp"
                android:layout_marginHorizontal="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="horizontal"
                        android:weightSum="3">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.8"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:text="@string/Route"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.2"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:text="@string/Orders"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:text="@string/PhotosTaken"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginHorizontal="1dp"
                        android:weightSum="3"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.8"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:layout_margin="1dp"
                            android:background="#FFEB96"
                            android:text="15"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.2"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:layout_margin="1dp"
                            android:background="#FFEB96"
                            android:text="Ordenes Pendientes"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:background="#FFEB96"
                            android:layout_margin="1dp"
                            android:text="7"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:weightSum="3"
                        android:layout_marginHorizontal="1dp"
                        android:orientation="horizontal">
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginHorizontal="1dp"
                        android:weightSum="3"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.8"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:layout_margin="1dp"
                            android:background="@color/EngieDx"
                            android:text="9"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.2"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:layout_margin="1dp"
                            android:background="@color/EngieDx"
                            android:text="Desconexiones"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:background="@color/EngieDx"
                            android:layout_margin="1dp"
                            android:text="3"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginHorizontal="1dp"
                        android:weightSum="3"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.8"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:layout_margin="1dp"
                            android:background="@color/EngieRx"
                            android:text="13"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.2"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:layout_margin="1dp"
                            android:background="@color/EngieRx"
                            android:text="Reconexiones"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:background="@color/EngieRx"
                            android:layout_margin="1dp"
                            android:text="5"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:weightSum="3"
                        android:layout_marginHorizontal="1dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.8"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:layout_margin="1dp"
                            android:background="@color/EngieRm"
                            android:text="18"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.2"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:layout_margin="1dp"
                            android:background="@color/EngieRm"
                            android:text="Remociones"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:background="@color/EngieRm"
                            android:layout_margin="1dp"
                            android:text="2"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:weightSum="3"
                        android:layout_marginHorizontal="1dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.8"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:layout_margin="1dp"
                            android:background="@color/EngieRr"
                            android:text="11"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.2"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:layout_margin="1dp"
                            android:background="@color/EngieRr"
                            android:text="Rec/Remo"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:background="@color/EngieRr"
                            android:layout_margin="1dp"
                            android:text="8"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="20dp"
                    app:cardCornerRadius="10dp"
                    android:backgroundTint="#00A2E9"
                    android:id="@+id/btnNext"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/Orders"
                        android:textSize="16sp"
                        android:textColor="@color/white"/>
                </androidx.cardview.widget.CardView>
            </RelativeLayout>



        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>