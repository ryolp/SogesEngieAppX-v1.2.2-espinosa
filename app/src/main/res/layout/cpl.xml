<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="end"
    android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:id="@+id/tv_titulo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">
                    <TextView
                        android:id="@+id/tv_version_lbl"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_weight="2"
                        android:textSize="26sp"
                        android:fontFamily="@font/lato_black"
                        android:textColor="@color/navy"
                        android:text="Recuerda, tu seguridad es\nlo mÃ¡s importante."/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp"
                android:layout_marginHorizontal="0dp">

                <LinearLayout
                    android:id="@+id/tv_titulo3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/tv_version_lbl2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:layout_weight="1"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:textSize="20sp"
                        android:fontFamily="@font/lato_bold2"
                        android:textColor="@color/navy"
                        android:text="  PREVENIR ACCIDENTES\n  GRAVES Y MORTALES"/>

                    <ImageView
                        android:id="@+id/iv_one_safety"
                        android:layout_width="123dp"
                        android:layout_height="90dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginStart="0dp"
                        android:src="@drawable/one_safety" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp"
                android:layout_marginHorizontal="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/iv_reglas_que_salvan_vidas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginBottom="0dp"
                        android:src="@drawable/reglas_que_salvan_vidas" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="1dp"
                android:weightSum="5"
                android:gravity="end"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_que_hacer_1"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/que_hacer_1" />

                <ImageView
                    android:id="@+id/iv_que_hacer_2"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/que_hacer_2" />

                <ImageView
                    android:id="@+id/iv_que_hacer_3"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/que_hacer_3" />

                <ImageView
                    android:id="@+id/iv_que_hacer_4"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/que_hacer_4" />

                <ImageView
                    android:id="@+id/iv_que_hacer_5"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/que_hacer_5" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="1dp"
                android:weightSum="5"
                android:gravity="start"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_que_hacer_6"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/que_no_hacer_1" />

                <ImageView
                    android:id="@+id/iv_que_hacer_7"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/que_no_hacer_2" />

                <ImageView
                    android:id="@+id/iv_que_hacer_8"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/que_no_hacer_3" />

                <ImageView
                    android:id="@+id/iv_que_hacer_9"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/que_no_hacer_4" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="1dp"
                android:paddingRight="10dp"
                android:weightSum="2"
                android:gravity="end"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_logo"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_marginHorizontal="50dp"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/logoengieazul" />

                <Button
                    android:id="@+id/b_admon"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    android:gravity="center"
                    android:text="@string/lbl_admon"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp"
                    android:visibility="gone"
                    android:fontFamily="@font/lato"
                    style="@style/AppTheme.RoundedCornerMaterialButton"
                    android:layout_marginLeft="-3dip"
                    android:layout_marginRight="-3dip"/>
                <Button
                    android:id="@+id/b_lecturista"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:fontFamily="@font/lato"
                    android:text="INICIAR"
                    android:textSize="28sp"
                    style="@style/AppTheme.RoundedCornerMaterialButton.Navy" />

            </LinearLayout>

        </LinearLayout>

    <TextView
        android:id="@+id/txtMensaje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/Red"
        android:textStyle="bold" />

</LinearLayout>