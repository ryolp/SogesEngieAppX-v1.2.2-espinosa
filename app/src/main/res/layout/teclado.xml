<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="top" >

    <TableLayout
         android:id="@+id/tl_teclado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" >

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/teclado_b_1"
                style="@style/AppTheme.RoundedCornerMaterialButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".3333"
                android:onClick="clickTeclado"
                android:tag="1"
                android:text="1"
                android:textSize="50dp" />

            <Button
                android:id="@+id/teclado_b_2"
                style="@style/AppTheme.RoundedCornerMaterialButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".3333"
                android:onClick="clickTeclado"
                android:tag="2"
                android:text="2"
                android:textSize="50sp" />

            <Button
                android:id="@+id/teclado_b_3"
                style="@style/AppTheme.RoundedCornerMaterialButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".3333"
                android:onClick="clickTeclado"
                android:tag="3"
                android:text="3"
                android:textSize="50sp" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/teclado_b_4"
                style="@style/AppTheme.RoundedCornerMaterialButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".3333"
                android:onClick="clickTeclado"
                android:tag="4"
                android:text="4"
                android:textSize="50sp" />

            <Button
                android:id="@+id/teclado_b_5"
                style="@style/AppTheme.RoundedCornerMaterialButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".3333"
                android:onClick="clickTeclado"
                android:tag="5"
                android:text="5"
                android:textSize="50sp" />

            <Button
                android:id="@+id/teclado_b_6"
                style="@style/AppTheme.RoundedCornerMaterialButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".3333"
                android:onClick="clickTeclado"
                android:tag="6"
                android:text="6"
                android:textSize="50sp" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/teclado_b_7"
                style="@style/AppTheme.RoundedCornerMaterialButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".3333"
                android:onClick="clickTeclado"
                android:tag="7"
                android:text="7"
                android:textSize="50sp" />

            <Button
                android:id="@+id/teclado_b_8"
                style="@style/AppTheme.RoundedCornerMaterialButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".3333"
                android:onClick="clickTeclado"
                android:tag="8"
                android:text="8"
                android:textSize="50sp" />

            <Button
                android:id="@+id/teclado_b_9"
                style="@style/AppTheme.RoundedCornerMaterialButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".3333"
                android:onClick="clickTeclado"
                android:tag="9"
                android:text="9"
                android:textSize="50sp" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/teclado_b_borrar"
                style="@style/AppTheme.RoundedCornerMaterialButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".3333"
                android:onClick="clickTeclado"
                android:tag="-1"
                android:text="Borrar" />

            <Button
                android:id="@+id/teclado_b_0"
                style="@style/AppTheme.RoundedCornerMaterialButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".3333"
                android:onClick="clickTeclado"
                android:tag="0"
                android:text="0"
                android:textSize="50sp" />

            <Button
                android:id="@+id/pcl_b_capturar"
                style="@style/AppTheme.RoundedCornerMaterialButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".3333"
                android:onClick="capturaLectura"
                android:text="@string/str_captura" />

        </TableRow>
    </TableLayout>

</RelativeLayout>