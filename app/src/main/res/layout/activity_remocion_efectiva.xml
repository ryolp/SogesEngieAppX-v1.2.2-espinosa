<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_remocion_efectiva"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main"
    android:gravity="top"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/iv_remo_logo_soges"
        android:layout_width="240dp"
        android:layout_height="100dp"
        android:layout_marginStart="0dp"
        android:src="@drawable/logo_soges_png"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_remo_monto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        android:text="\nREMOCIÓN EFECTIVA\n"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:background="@color/SteelBlue"
        android:gravity="center"
        android:textColor="@color/White"
        android:textStyle="bold"
        android:fontFamily="@font/lato" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="25dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="3dp">

                <TextView
                    android:id="@+id/tv_remo_si_o_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    android:gravity="center"
                    android:paddingVertical="10dp"
                    android:paddingHorizontal="0dp"
                    android:textSize="20sp"
                    android:text="¿Se retiró Medidor?"
                    android:textColor="@color/black"
                    android:fontFamily="@font/lato" />

                <Spinner
                    android:id="@+id/sv_si_o_no"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:paddingVertical="80dp"
                    android:textSize="20sp"
                    android:gravity="center"/>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rv_remo_combo_marcas"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="25dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="3dp">

                <TextView
                    android:id="@+id/tv_remo_agente"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    android:gravity="center"
                    android:paddingVertical="10dp"
                    android:paddingHorizontal="0dp"
                    android:textSize="20sp"
                    android:text="Marca del Medidor Retirado:"
                    android:textColor="@color/black"
                    android:fontFamily="@font/lato" />

                <Spinner
                    android:id="@+id/sv_remo_marcas"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:textSize="20sp"
                    android:paddingVertical="80dp"
                    android:gravity="bottom"/>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rv_remo_combo_serie"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:visibility="gone"
        android:layout_marginTop="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="0dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="3dp">

                <TextView
                    android:id="@+id/tv_remo_serie"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    android:gravity="top"
                    android:paddingVertical="10dp"
                    android:paddingHorizontal="40dp"
                    android:textSize="20sp"
                    android:text="Serie del Medidor Retirado:"
                    android:textColor="@color/black"
                    android:fontFamily="@font/lato" />

                <EditText
                    android:id="@+id/ev_remo_serie"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:text=""
                    android:inputType="number"
                    android:paddingVertical="30dp" />

            </androidx.cardview.widget.CardView>

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rv_remo_combo_tuberia"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="25dp"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="3dp">

                <TextView
                    android:id="@+id/tv_remo_tuberia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    android:gravity="center"
                    android:paddingVertical="10dp"
                    android:paddingHorizontal="0dp"
                    android:textSize="20sp"
                    android:text="Tubería retirada:"
                    android:textColor="@color/black"
                    android:fontFamily="@font/lato" />

                <Spinner
                    android:id="@+id/sv_remo_tuberia"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:textSize="20sp"
                    android:paddingVertical="80dp"
                    android:gravity="bottom"/>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="0dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="3dp">

                <TextView
                    android:id="@+id/tv_remo_observaciones"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    android:gravity="top"
                    android:paddingVertical="10dp"
                    android:paddingHorizontal="40dp"
                    android:textSize="20sp"
                    android:text="Escriba sus Observaciones:"
                    android:textColor="@color/black"
                    android:fontFamily="@font/lato" />

                <EditText
                    android:id="@+id/ev_remo_observaciones"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:gravity="center"
                    android:text=""
                    android:textSize="20sp"
                    android:inputType="text"
                    android:paddingVertical="30dp" />

            </androidx.cardview.widget.CardView>

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="25dp">

        <Button
            android:id="@+id/btn_remo_continuar"
            android:layout_marginStart="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/navy"
            android:fontFamily="@font/lato"
            style="@style/AppTheme.RoundedCornerMaterialButton"
            android:text="CONTINUAR" />
    </RelativeLayout>

</LinearLayout>